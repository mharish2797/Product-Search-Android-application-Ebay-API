<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sim_cardview"
    android:layout_width="match_parent" android:layout_height="150dp"
    android:layout_margin="5dp"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sim_prod_img"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sim_prod_title"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TITLE"
                />

            <TableLayout
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/sim_prod_ship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping"
                        />
                    <TextView
                        android:id="@+id/sim_prod_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Left"
                        android:gravity="right"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />
                    <TextView
                        android:id="@+id/sim_prod_price"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="PRICE"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>